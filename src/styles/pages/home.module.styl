$frosting = palevioletred

.container {
  min-height: 100vh
  display: flex
  justify-content: center
  align-items: center  
}

.general {
  }

.birthday
  div
    width: 120px
    height: 24px
    margin-left: -(@width/2)
    margin-top: 50px
    background: black(.1)
    border-radius: 50%

    &:before
      left: 50%
      z-index: 2
      background-image: linear-gradient(to left, black(.1) 25%,
                                                 black(.05) 25%,
                                                 black(.05) 50%,
                                                 black(0) 50%)
      border: 5px solid darkgoldenrod

    &:after
      left: 50%
      z-index: 1

      background: lightgreen
      background-image: linear-gradient(to left, black(.1) 20%,
                                                 black(.05) 20%,
                                                 black(.05) 46%,
                                                 black(0) 46%),
                        radial-gradient(white(.8) 15%, white(0) 16%),
                        repeating-linear-gradient(to right,
                                                    lightgreen,
                                                    lightgreen 8px,
                                                    darken(lightgreen,15%) 8px,
                                                    darken(lightgreen,15%) 16px)
      background-size: auto auto, 15px 15px, auto auto
      background-position: 0 0, 30px 30px, 0 0
      border: 5px solid darkgoldenrod